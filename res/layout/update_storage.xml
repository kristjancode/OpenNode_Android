<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:fillViewport="true">
	<LinearLayout android:id="@+id/update_table"
		android:weightSum="1" xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent" android:layout_height="match_parent"
		android:isScrollContainer="true" android:orientation="vertical">
		<TextView android:id="@+id/update_storage_label"
			android:layout_width="fill_parent" android:padding="12px"
			android:text="Edit Storage" android:textSize="24sp" android:typeface="serif"
			android:gravity="center" android:background="@color/actionbar_background_end"
			android:layout_height="0dp" android:layout_weight="0.50">
		</TextView>
		<RelativeLayout android:focusable="true"
			android:id="@+id/relativeLayout1" android:keepScreenOn="true"
			android:focusableInTouchMode="true" android:layout_height="484dp"
			android:isScrollContainer="true" android:layout_gravity="top"
			android:scrollbars="vertical" android:layout_width="match_parent">
			<EditText android:layout_alignParentRight="true"
				android:singleLine="true" android:layout_alignBottom="@+id/textView3"
				android:id="@+id/editText2" android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:inputType="number"
				android:layout_alignBaseline="@+id/textView3"
				android:layout_toRightOf="@+id/textView4"></EditText>
			<EditText android:singleLine="true" android:id="@+id/editText4"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:layout_alignBaseline="@+id/textView4"
				android:layout_alignBottom="@+id/textView4"
				android:layout_alignParentRight="true" android:layout_toRightOf="@+id/textView4"></EditText>
			<TextView android:text="Size: " android:id="@+id/textView3"
				android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_below="@+id/editText4"
				android:layout_alignParentLeft="true" android:layout_marginTop="23dp"
				android:layout_width="wrap_content"></TextView>
			<Spinner android:fadeScrollbars="true" android:editable="true"
				android:singleLine="true" android:fitsSystemWindows="true"
				android:id="@+id/storageSpinner" android:layout_height="wrap_content"
				android:focusableInTouchMode="true" android:layout_width="wrap_content"
				android:keepScreenOn="true" android:focusable="true"
				android:layout_below="@+id/editText2" android:layout_marginTop="16dp"
				android:layout_alignParentRight="true" android:layout_alignLeft="@+id/editText2"></Spinner>
			<TextView android:text="Name: " android:id="@+id/textView4"
				android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_below="@+id/textView1"
				android:layout_alignParentLeft="true" android:layout_marginTop="16dp"
				android:layout_width="wrap_content"></TextView>
			<Button android:layout_width="wrap_content" android:text="Edit"
				android:id="@+id/btn_update_storage" android:layout_height="wrap_content"
				android:layout_below="@+id/storageSpinner"
				android:layout_alignParentLeft="true" android:layout_toLeftOf="@+id/storageSpinner"></Button>
			<TextView android:id="@+id/textView2" android:text="Type: "
				android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_alignTop="@+id/storageSpinner"
				android:layout_alignParentLeft="true" android:layout_width="wrap_content"></TextView>
		</RelativeLayout>
	</LinearLayout>
</ScrollView>