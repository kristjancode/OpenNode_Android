<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
android:layout_width="match_parent" 
android:layout_height="match_parent"
android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<RelativeLayout android:layout_width="wrap_content"
		android:id="@+id/relativeLayout1" android:isScrollContainer="true" android:layout_height="496dp">
		<TextView android:text="Create Virtual Machine"
			android:padding="12px" android:background="@color/actionbar_background_end"
			android:id="@+id/create_vm_label" android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:textSize="24sp"
			android:typeface="serif" android:gravity="center"></TextView>
		<TextView android:text="Name:"
			android:layout_alignParentLeft="true" android:id="@+id/textView2"
			android:layout_height="wrap_content" android:layout_below="@+id/textView9"
			android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"></TextView>
		<TextView android:text="Arch:"
			android:layout_alignParentLeft="true" android:id="@+id/textView3"
			android:layout_height="wrap_content" android:layout_below="@+id/editText1"
			android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"></TextView>
		<TextView android:text="Cores:"
			android:layout_alignParentLeft="true" android:id="@+id/textView4"
			android:layout_height="wrap_content" android:layout_below="@+id/editText2"
			android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"></TextView>
		<TextView android:text="Cpu:" android:layout_alignParentLeft="true"
			android:id="@+id/textView5" android:layout_height="wrap_content"
			android:layout_below="@+id/editText3" android:layout_width="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"></TextView>
		<TextView android:text="Memory:"
			android:layout_alignParentLeft="true" android:id="@+id/textView6"
			android:layout_height="wrap_content" android:layout_below="@+id/editText4"
			android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"></TextView>
		<TextView android:text="State:"
			android:layout_alignParentLeft="true" android:id="@+id/textView7"
			android:layout_height="wrap_content" android:layout_below="@+id/editText5"
			android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"></TextView>
		<EditText android:singleLine="true" android:id="@+id/editText1"
			android:layout_height="wrap_content" android:layout_alignTop="@+id/textView2"
			android:layout_width="wrap_content" android:layout_alignParentRight="true"
			android:layout_toRightOf="@+id/textView6"></EditText>
		<EditText android:singleLine="true" android:id="@+id/editText2"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_alignTop="@+id/textView3" android:layout_alignLeft="@+id/editText1"
			android:layout_alignParentRight="true"></EditText>
		<EditText android:singleLine="true" android:id="@+id/editText3"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:inputType="number" android:layout_alignTop="@+id/textView4"
			android:layout_toRightOf="@+id/textView6"
			android:layout_alignParentRight="true"></EditText>
		<EditText android:singleLine="true" android:id="@+id/editText4"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:inputType="numberDecimal" android:layout_alignTop="@+id/textView5"
			android:layout_toRightOf="@+id/textView6"
			android:layout_alignParentRight="true"></EditText>
		<EditText android:singleLine="true" android:id="@+id/editText5"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:inputType="number" android:layout_alignTop="@+id/textView6"
			android:layout_alignLeft="@+id/editText4"
			android:layout_alignParentRight="true"></EditText>
		<EditText android:singleLine="true" android:id="@+id/editText6"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_alignTop="@+id/textView7" android:layout_alignLeft="@+id/editText5"
			android:layout_alignParentRight="true"></EditText>
		<Button android:id="@+id/btn_create_vm" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:text="Create"
			android:layout_below="@+id/editText6" android:layout_alignParentLeft="true"
			android:layout_marginTop="16dp"></Button>
		<TextView android:text="Template :" android:id="@+id/textView9"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_below="@+id/create_vm_label"
			android:layout_alignParentLeft="true"></TextView>
	</RelativeLayout>

</LinearLayout>

</ScrollView>